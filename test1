  
pipeline {
    agent any
    stages {
        stage('One') {
	  agent {
            docker {
               image 'maven:3-alpine'
               label 'my-defined-label'
               args  '-v /tmp:/tmp'
           }
}
                steps {
                        echo 'Hi, this is Haya from Palestine'
			
                }
        }
	    stage('Two'){
		    
		steps {
			input('Do you want to proceed?')
        }
	    }
        stage('Three') {
                when {
                        not {
                                branch "master"
                        }
                }
                steps {
			echo "Hello"
                        }
        }
      
    }
}
